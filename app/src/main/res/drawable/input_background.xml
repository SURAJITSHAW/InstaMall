<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#E0E0E0" /> <!-- Light gray shadow -->
        </shape>
    </item>

    <!-- Main Background with Border -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color, white or off-white -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
<!--            <stroke android:width="1dp" android:color="#BCAAA4" /> &lt;!&ndash; Border color (taupe) &ndash;&gt;-->
        </shape>
    </item>

</layer-list>
